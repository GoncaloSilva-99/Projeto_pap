<body class="bg-gray-900 text-gray-100 min-h-screen">

    <div class="relative h-64 bg-gradient-to-r from-indigo-900 to-purple-900 overflow-hidden">
        <div class="absolute inset-0 bg-black opacity-30"></div>
        <div class="relative h-full flex items-center justify-center">
            <% if player_profile.banner_picture.attached? %>
                <%= image_tag url_for(player_profile.banner_picture), class: "w-full h-full object-cover" %>
            <% else %>
                <%= image_tag "default_banner.jpg", class: "w-full h-full object-cover" %>
            <% end %>
        </div>
    </div>


    <div class="container mx-auto px-4 -mt-16 relative z-10">
        <div class="flex flex-col md:flex-row items-center md:items-end gap-6">
            <div class="profile-pic w-32 h-32 md:w-40 md:h-40 rounded-full bg-gray-800 overflow-hidden border-4 border-gray-700 shadow-xl">
                <% if player_profile.profile_picture.attached? %>
                    <%= image_tag url_for(player_profile.profile_picture), class: "w-full h-full object-cover" %>
                <% else %>
                    <%= image_tag "default_pp.jpg", class: "w-full h-full object-cover" %>
                <% end %>
            </div>
            
            <div class="flex-1">
                <div class="flex items-center gap-4">
                    <h2 class="text-2xl md:text-3xl font-bold py-1"><%= player_profile.name %></h2>
                </div>
                
                <div class="flex items-center gap-4 mt-4">
                    <button class="flex items-center gap-2 px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition">
                        <i data-feather="user-plus"></i>
                        <span>Follow</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8 grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Club Card -->
            <div class="bg-gray-800 rounded-xl p-6 shadow-lg fade-in">
                <div class="flex items-center gap-4">
                    <div class="w-16 h-16 rounded-full bg-gray-700 overflow-hidden">
                        <img src="http://static.photos/sport/200x200/10" alt="Club" class="w-full h-full object-cover">
                    </div>
                    <div>
                        <h3 class="text-xl font-bold">Inter Miami CF</h3>
                        <p class="text-gray-400">Major League Soccer</p>
                    </div>
                </div>
                
                <div class="grid grid-cols-2 gap-4 mt-6">
                    <div class="bg-gray-700 p-4 rounded-lg">
                        <p class="text-gray-400 text-sm">Matches</p>
                        <p class="text-xl font-bold">24</p>
                    </div>
                    <div class="bg-gray-700 p-4 rounded-lg">
                        <p class="text-gray-400 text-sm">Goals</p>
                        <p class="text-xl font-bold">18</p>
                    </div>
                    <div class="bg-gray-700 p-4 rounded-lg">
                        <p class="text-gray-400 text-sm">Assists</p>
                        <p class="text-xl font-bold">12</p>
                    </div>
                    <div class="bg-gray-700 p-4 rounded-lg">
                        <p class="text-gray-400 text-sm">Trophies</p>
                        <p class="text-xl font-bold">44</p>
                    </div>
                </div>
            </div>
            
            <!-- Posts Section -->
            <div class="space-y-6">
                <div class="flex items-center justify-between">
                    <h3 class="text-xl font-bold">Posts</h3>
                    <button class="flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-lg transition">
                        <i data-feather="plus"></i>
                        <span>Create Post</span>
                    </button>
                </div>
                
                <!-- Post 1 -->
                <div class="post-card bg-gray-800 rounded-xl p-6 shadow-lg fade-in">
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-10 h-10 rounded-full bg-gray-700 overflow-hidden">
                            <img src="http://static.photos/sport/200x200/42" alt="User" class="w-full h-full object-cover">
                        </div>
                        <div>
                            <p class="font-medium">Lionel Messi</p>
                            <p class="text-gray-400 text-sm">2 hours ago</p>
                        </div>
                        <div class="ml-auto flex gap-2">
                            <button class="text-gray-400 hover:text-indigo-400 transition">
                                <i data-feather="edit"></i>
                            </button>
                            <button class="text-gray-400 hover:text-red-400 transition">
                                <i data-feather="trash-2"></i>
                            </button>
                        </div>
                    </div>
                    
                    <p class="mb-4">Great win today with the team! The atmosphere was incredible and the fans were amazing as always. Looking forward to the next match!</p>
                    
                    <div class="rounded-lg overflow-hidden mb-4">
                        <img src="http://static.photos/sport/640x360/15" alt="Post" class="w-full h-auto">
                    </div>
                    
                    <div class="flex items-center gap-4 text-gray-400">
                        <button class="flex items-center gap-1 hover:text-indigo-400 transition">
                            <i data-feather="heart"></i>
                            <span>1.2k</span>
                        </button>
                        <button class="flex items-center gap-1 hover:text-indigo-400 transition">
                            <i data-feather="message-square"></i>
                            <span>243</span>
                        </button>
                        <button class="flex items-center gap-1 hover:text-indigo-400 transition">
                            <i data-feather="share-2"></i>
                            <span>Share</span>
                        </button>
                    </div>
                </div>
                
                <!-- Post 2 -->
                <div class="post-card bg-gray-800 rounded-xl p-6 shadow-lg fade-in">
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-10 h-10 rounded-full bg-gray-700 overflow-hidden">
                            <img src="http://static.photos/sport/200x200/42" alt="User" class="w-full h-full object-cover">
                        </div>
                        <div>
                            <p class="font-medium">Lionel Messi</p>
                            <p class="text-gray-400 text-sm">1 day ago</p>
                        </div>
                        <div class="ml-auto flex gap-2">
                            <button class="text-gray-400 hover:text-indigo-400 transition">
                                <i data-feather="edit"></i>
                            </button>
                            <button class="text-gray-400 hover:text-red-400 transition">
                                <i data-feather="trash-2"></i>
                            </button>
                        </div>
                    </div>
                    
                    <p class="mb-4">Training session today was intense! Working hard to stay in top form for the upcoming matches. Thanks to all the staff for their support.</p>
                    
                    <div class="grid grid-cols-2 gap-2 mb-4">
                        <div class="rounded-lg overflow-hidden">
                            <img src="http://static.photos/sport/320x240/20" alt="Post" class="w-full h-full object-cover">
                        </div>
                        <div class="rounded-lg overflow-hidden">
                            <img src="http://static.photos/sport/320x240/21" alt="Post" class="w-full h-full object-cover">
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-4 text-gray-400">
                        <button class="flex items-center gap-1 hover:text-indigo-400 transition">
                            <i data-feather="heart"></i>
                            <span>2.4k</span>
                        </button>
                        <button class="flex items-center gap-1 hover:text-indigo-400 transition">
                            <i data-feather="message-square"></i>
                            <span>512</span>
                        </button>
                        <button class="flex items-center gap-1 hover:text-indigo-400 transition">
                            <i data-feather="share-2"></i>
                            <span>Share</span>
                        </button>
                    </div>
                </div>
                
                <!-- Pagination -->
                <div class="flex justify-center gap-2 mt-8">
                    <button class="w-10 h-10 flex items-center justify-center bg-gray-700 hover:bg-indigo-600 rounded-lg transition">
                        <i data-feather="chevron-left"></i>
                    </button>
                    <button class="w-10 h-10 flex items-center justify-center bg-indigo-600 rounded-lg">1</button>
                    <button class="w-10 h-10 flex items-center justify-center bg-gray-700 hover:bg-indigo-600 rounded-lg transition">2</button>
                    <button class="w-10 h-10 flex items-center justify-center bg-gray-700 hover:bg-indigo-600 rounded-lg transition">3</button>
                    <button class="w-10 h-10 flex items-center justify-center bg-gray-700 hover:bg-indigo-600 rounded-lg transition">
                        <i data-feather="chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Right Column -->
        <div class="space-y-8">
            <!-- Biography -->
            <div class="bg-gray-800 rounded-xl p-6 shadow-lg fade-in">
                <h3 class="text-xl font-bold mb-4">Biografia</h3>
                <% if player_profile.bio.present? %>
                    <%= player_profile.bio %>
                <% else %>
                    <p class="text-gray-300 mb-4"> Ainda sem biografia </p>
                <% end %>
                
                <div class="mt-6 space-y-3">
                    <div class="flex items-center gap-3">
                        <i data-feather="calendar" class="text-gray-400"></i>
                        <span class="text-gray-300">Born: June 24, 1987 (age 36)</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <i data-feather="map-pin" class="text-gray-400"></i>
                        <span class="text-gray-300">Rosario, Argentina</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <i data-feather="ruler" class="text-gray-400"></i>
                        <span class="text-gray-300">Height: 1.70 m (5 ft 7 in)</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <i data-feather="award" class="text-gray-400"></i>
                        <span class="text-gray-300">Position: Forward</span>
                    </div>
                </div>
                
                <button class="mt-6 w-full py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition flex items-center justify-center gap-2">
                    <i data-feather="edit"></i>
                    <span>Edit Biography</span>
                </button>
            </div>
            
            <!-- Team Members -->
            <div class="bg-gray-800 rounded-xl p-6 shadow-lg fade-in">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold">Team Members</h3>
                    <button class="text-indigo-400 hover:text-indigo-300 transition">
                        <i data-feather="plus"></i>
                    </button>
                </div>
                
                <div class="space-y-4">
                    <!-- Player 1 -->
                    <div class="flex items-center gap-3 p-3 hover:bg-gray-700 rounded-lg transition">
                        <div class="w-12 h-12 rounded-full bg-gray-700 overflow-hidden">
                            <img src="http://static.photos/sport/200x200/30" alt="Player" class="w-full h-full object-cover">
                        </div>
                        <div class="flex-1">
                            <p class="font-medium">Sergio Busquets</p>
                            <p class="text-gray-400 text-sm">Midfielder | #5</p>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-400 hover:text-indigo-400 transition">
                                <i data-feather="edit"></i>
                            </button>
                            <button class="text-gray-400 hover:text-red-400 transition">
                                <i data-feather="trash-2"></i>
                            </button>
                        </div>
                    </div>
                    
                    <!-- Player 2 -->
                    <div class="flex items-center gap-3 p-3 hover:bg-gray-700 rounded-lg transition">
                        <div class="w-12 h-12 rounded-full bg-gray-700 overflow-hidden">
                            <img src="http://static.photos/sport/200x200/31" alt="Player" class="w-full h-full object-cover">
                        </div>
                        <div class="flex-1">
                            <p class="font-medium">Jordi Alba</p>
                            <p class="text-gray-400 text-sm">Defender | #18</p>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-400 hover:text-indigo-400 transition">
                                <i data-feather="edit"></i>
                            </button>
                            <button class="text-gray-400 hover:text-red-400 transition">
                                <i data-feather="trash-2"></i>
                            </button>
                        </div>
                    </div>
                    
                    <!-- Manager -->
                    <div class="flex items-center gap-3 p-3 hover:bg-gray-700 rounded-lg transition">
                        <div class="w-12 h-12 rounded-full bg-gray-700 overflow-hidden">
                            <img src="http://static.photos/sport/200x200/32" alt="Manager" class="w-full h-full object-cover">
                        </div>
                        <div class="flex-1">
                            <p class="font-medium">Gerardo Martino</p>
                            <p class="text-gray-400 text-sm">Head Coach</p>
                        </div>
                        <div class="flex gap-2">
                            <button class="text-gray-400 hover:text-indigo-400 transition">
                                <i data-feather="edit"></i>
                            </button>
                            <button class="text-gray-400 hover:text-red-400 transition">
                                <i data-feather="trash-2"></i>
                            </button>
                        </div>
                    </div>
                </div>
                
                <button class="mt-4 w-full py-2 border border-dashed border-gray-600 hover:border-indigo-500 text-gray-400 hover:text-indigo-400 rounded-lg transition flex items-center justify-center gap-2">
                    <i data-feather="plus"></i>
                    <span>Add Team Member</span>
                </button>
            </div>
        </div>
    </div>

    <script>
        feather.replace();
    </script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        body {
            font-family: 'Inter', sans-serif;
            transition: all 0.3s ease;
        }
        
        .profile-pic {
            border: 4px solid #1e293b;
            transition: transform 0.3s ease;
        }
        
        .profile-pic:hover {
            transform: scale(1.05);
        }
        
        .post-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
        }
        
        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>

    

