<div id="post_form" class="bg-gray-800 rounded-xl p-4 shadow-lg">
 <%= form_with model: Post.new, local: false, id: "new_post_form" do |f| %>

 <div class="flex items-start space-x-4">
 <div class="w-10 h-10 rounded-full bg-gray-700 flex-shrink-0 flex items-center justify-center">
 <i data-feather="user" class="text-gray-400"></i>
 </div>

 <div class="flex-1 space-y-3">
 <%= f.text_area :content,
 rows: 3,
 placeholder: "O que estÃ¡s a pensar?",
 class: "w-full bg-gray-700 rounded-lg p-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2" %>

 <div class="flex justify-between items-center">
 <div class="flex items-center space-x-2">
 <%= f.file_field :images,
 multiple: true,
 accept: "image/*",
 class: "hidden",
 id: "post_images_inline" %>
 <label for="post_images_inline" class="p-2 text-gray-400 hover:text-blue-400 rounded-full hover:bg-gray-700 cursor-pointer">
 <i data-feather="image" class="w-5 h-5"></i>
 </label>
 </div>

 <%= f.submit "Publicar",
 class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium cursor-pointer" %>
 </div>
 </div>
 </div>
 <% end %>
</div>