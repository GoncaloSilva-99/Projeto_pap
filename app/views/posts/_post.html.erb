<%= turbo_frame_tag "post_#{post.id}", class: "post-card bg-gray-800 rounded-xl p-6 shadow-lg", target: "_top" do %>

 <div class="flex items-center justify-between mb-4">
    <div class="flex items-center space-x-3">
        <div class="w-10 h-10 rounded-full bg-gray-700 flex-shrink-0 flex items-center justify-center">
            <i data-feather="user" class="text-gray-400"></i>
        </div>
        <div>
            <h3 class="font-bold text-white">
                <%= link_to post.user.name, user_path(post.user), class: "hover:underline" %>
            </h3>
            <span class="text-gray-400 text-sm"><%= post.time_ago %> atrás</span>
        </div>
    </div>

    <% if post.user == current_user %>
        <div class="flex items-center space-x-2">
            <%= link_to edit_post_path(post), class: "text-gray-400 hover:text-blue-400" do %>
                <i data-feather="edit-2" class="w-5 h-5"></i>
            <% end %>
            <%= button_to post_path(post), method: :delete,
                class: "text-gray-400 hover:text-red-400",
                data: { turbo_confirm: "Tens a certeza?", turbo_frame: "post_#{post.id}" } do %>
                <i data-feather="trash-2" class="w-5 h-5"></i>
            <% end %>
        </div>
    <% end %>
    </div>

    <p class="text-gray-300 mb-4">
    <%= simple_format(post.content, {}, sanitize: true) %>
    </p>

    <% if post.has_images? %>
    <div class="mb-4">
    <%= render 'posts/images_carousel', post: post %>
    </div>
    <% end %>

    <%= render 'posts/like_section', post: post %>

    <div class="mt-4 border-t border-gray-700 pt-4">
    <%= render 'posts/comments_count', post: post %>
    <%= link_to "Ver comentários", post_path(post),
    class: "text-blue-400 hover:text-blue-300 text-sm ml-4",
    data: { turbo_frame: "_top" } %>
 </div>

<% end %>
