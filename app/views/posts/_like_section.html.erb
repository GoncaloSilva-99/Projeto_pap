<%= turbo_frame_tag "like_section_#{post.id}", class: "flex items-center justify-between pt-4 border-t border-gray-700" do %

 <div class="flex items-center gap-4">
 <div>
 <% if post.liked_by?(current_user) %>
 <%= button_to post_like_path(post),
 method: :delete,
 class: "flex items-center space-x-2 text-red-500 hover:text-red-400 transition",
 data: { turbo_frame: "like_section_#{post.id}" } do %>
 <i data-feather="heart" class="w-5 h-5 fill-current"></i>
 <span>Unlike</span>
 <% end %>
 <% else %>
 <%= button_to post_like_path(post),
 method: :post,
 class: "flex items-center space-x-2 text-gray-400 hover:text-red-500 transition",
 data: { turbo_frame: "like_section_#{post.id}" } do %>
 <i data-feather="heart" class="w-5 h-5"></i>
 <span>Like</span>
 <% end %>
 <% end %>

 <span class="text-gray-400 text-sm ml-2">
 <%= post.likes_count %> <%= 'like'.pluralize(post.likes_count) %>
 </span>
 </div>

 <div class="flex items-center space-x-2 text-gray-400">
 <i data-feather="message-circle" class="w-5 h-5"></i>
 <span class="text-sm">
 <%= post.comments_count %> <%= 'comentÃ¡rio'.pluralize(post.comments_count) %>
 </span>
 </div>
 </div>

 <button class="flex items-center space-x-2 text-gray-400 hover:text-green-400 transition">
 <i data-feather="share-2" class="w-5 h-5"></i>
 <span>Partilhar</span>
 </button>

<% end %>