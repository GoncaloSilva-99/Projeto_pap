<%= form_with(model: post, local: false) do |form| %>
 <% if post.errors.any? %>
 <div class="bg-red-900 border border-red-700 text-red-100 px-4 py-3 rounded mb-4">
 <h2 class="font-bold mb-2"><%= pluralize(post.errors.count, "erro") %> impediram de guardar:</h2>
 <ul class="list-disc list-inside">
 <% post.errors.full_messages.each do |message| %>
 <li><%= message %></li>
 <% end %>
 </ul>
 </div>
 <% end %>
 <div class="space-y-4">
 <div>
 <%= form.label :content, "ConteÃºdo", class: "block text-sm font-medium mb-2" %>
 <%= form.text_area :content,
 rows: 5,
 class: "w-full bg-gray-700 rounded-lg p-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue"
 </div>
 <div>
 <%= form.label :images, "Imagens (mÃ¡x. 10)", class: "block text-sm font-medium mb-2" %>
 <%= form.file_field :images,
 multiple: true,
 accept: "image/png, image/jpg, image/jpeg, image/gif, image/webp",
 class: "block w-full text-sm text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm"%>
 </div>
 <% if post.persisted? && post.images.attached? %>
 <div class="space-y-2">
 <p class="text-sm font-medium">Imagens atuais:</p>
 <div class="flex flex-wrap gap-2">
 <% post.images.each do |image| %>
 <div class="relative">
 <%= image_tag image, class: "w-20 h-20 object-cover rounded" %>
 </div>
 <% end %>
 </div>
 </div>
 <% end %>
 <div class="flex gap-4">
 <%= form.submit "Guardar", class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium cursor-pointer"%>
 <%= link  "Cancelar", posts_path, class: "bg-gray-700 hover:bg-gray-600 text-white px-6 py-2 rounded-lg font-medium"%>
 </div>
<% end %>