                <i data-feather="user" class="sidebar-icon text-purple-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Público</span>
            </div>
            <% end %>

            <%= link_to root_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-orange-400 rounded-xl border-l-4 border-transparent hover:border-orange-500 transition-all duration-300">
                <i data-feather="map-pin" class="sidebar-icon text-orange-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Infraestruturas</span>
            </div>
            <% end %>

            <%= link_to root_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-rose-400 rounded-xl border-l-4 border-transparent hover:border-rose-300 transition-all duration-300">
                <i data-feather="clipboard" class="sidebar-icon text-rose-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Material</span>
            </div>
            <% end %>

            <%= link_to root_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-gray-400 rounded-xl border-l-4 border-transparent hover:border-gray-500 transition-all duration-300">
                <i data-feather="settings" class="sidebar-icon text-gray-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Membros da Direção</span>
            </div>
            <% end %>

            <%= link_to root_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-rose-900 rounded-xl border-l-4 border-transparent hover:border-rose-950 transition-all duration-300">
                <i data-feather="arrow-left" class="sidebar-icon text-rose-900 w-5 h-5 mr-3"></i>
                <span class="font-medium">Página Inicial</span>
            </div>
            <% end %>
        </nav>


        <div class="p-4 border-t border-slate-700">
            <div class="flex items-center space-x-3">
                <% if (current_user.club? and current_user.club_profile.profile_picture.attached?) %>
                    <%= image_tag url_for(current_user.club_profile.profile_picture), class: "w-10 h-10 rounded-full border-2 border-slate-600" %>
                <% elsif (current_user.board? and current_user.profile_picture.attached?) %>
                    <%= image_tag url_for(current_user.board_profile.profile_picture), class: "w-10 h-10 rounded-full border-2 border-slate-600" %>
                <% else %>
                    <%= image_tag "default_pp.jpg", class: "w-10 h-10 rounded-full border-2 border-slate-600" %>
                <% end %>
                <div class="flex-1">
                    <% if current_user.club? %>
                        <p class="text-sm font-medium text-white"> <%= current_user.club_profile.name %> </p>
                    <% elsif current_user.board? %>
                        <p class="text-sm font-medium text-white"> <%= current_user.board_profile.name %> </p>
                    <% end %>
                </div>
                <%= button_to destroy_user_session_path, method: :delete do %>
                    <i data-feather="log-out" class="text-slate-400 hover:text-red-400 cursor-pointer transition-colors"></i>
                <% end %>
            </div>
        </div>
</div>
<!-------------------------------------------------------------------------------- MAIN ------------------------------------------------------------------------->
    <div class="flex-1 p-8">

            <div class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-3xl font-bold  text-green-400 slide-in">Equipas</h1>
                    <p class="text-slate-400 mt-1">Veja as diferentes equipas do seu clube e os seus respetivos membros</p> 
                </div>
            </div>

<!-------------------------------------------------------------------------------- DESPORTOS ------------------------------------------------------------------------->

            <div class="mb-12">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-orange-400 flex items-center space-x-2">
                        <i data-feather="dribbble" class="w-6 h-6"></i>
                        <span>Desportos</span>
                    </h3>

                    <div class="flex items-center gap-4">
                        <% if (current_user.club? and !current_user.club_profile.has_both_sports?) or (current_user.board? and !current_user.board_profile.club_profile.has_both_sports?) %>
                            <button data-modal-target="select-modal" data-modal-toggle="select-modal" class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                                <i data-feather="plus" class="w-4 h-4"></i>
                            </button>
                        <% end %>
                        <% if (current_user.club? and !current_user.club_profile.has_no_sports?) or (current_user.board? and !current_user.board_profile.club_profile.has_no_sports?) %>
                            <button data-modal-target="select-modal-remove" data-modal-toggle="select-modal-remove" class="bg-red-700 hover:bg-red-800 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                                <i data-feather="x" class="w-4 h-4"></i>
                            </button>
                        <% end %>
                    </div>
                    
                </div>
            <% if (current_user.club? and !current_user.club_profile.has_no_sports?) or (current_user.board? and !current_user.board_profile.club_profile.has_no_sports?) %>
                <div class="bg-gray-800 rounded-xl p-1 mb-8 transition-all duration-300">
                    <div class="flex">
                    <% selected_sport = params[:sport] %>

                    <% if (current_user.club? and current_user.club_profile.has_football?) or (current_user.board? and current_user.board_profile.club_profile.has_football?) %>

                        <% if (current_user.club? and current_user.club_profile.has_both_sports?) or (current_user.board? and current_user.board_profile.club_profile.has_both_sports?) %>
                            <% if selected_sport == nil %>
                                <% selected_sport = "football" %>
                            <% end %>
                        <% else %>
                            <% selected_sport = "football" %>
                        <% end %>

                        <%= link_to url_for(params.permit!.to_h.merge(sport: 'football')), method: :get, class: [
                                "flex-1 py-3 px-6 rounded-lg font-medium transition-all duration-300 transform shadow-lg flex items-center justify-center space-x-2",
                                (selected_sport == 'football' ? "bg-amber-500 text-white hover:scale-[1.01]" : "text-gray-400 hover:text-gray-200 hover:bg-gray-700/50")
                            ].join(' ') do %>
                            <span>Futebol</span>
                        <% end %>

                    <% end %>

                    <% if (current_user.club? and current_user.club_profile.has_handball?) or (current_user.board? and current_user.board_profile.club_profile.has_handball?) %>

                        <% if (current_user.club? and current_user.club_profile.has_both_sports?) or (current_user.board? and current_user.board_profile.club_profile.has_both_sports?) %>
                            <% if selected_sport == nil %>
                                <% selected_sport = "handball" %>
                            <% end %>
                        <% else %>
                            <% selected_sport = "handball" %>
                        <% end %>

                        <%= link_to url_for(params.permit!.to_h.merge(sport: 'handball')), method: :get, class: [
                                "flex-1 py-3 px-6 rounded-lg font-medium transition-all duration-300 flex items-center justify-center space-x-2",
                                (selected_sport == 'handball' ? "bg-amber-500 text-white hover:scale-[1.01] shadow-lg" : "text-gray-400 hover:text-gray-200 hover:bg-gray-700/50")
                            ].join(' ') do %>
                            <span>Andebol</span>
                        <% end %>

                    <% end %>
                    </div>
                </div>

                <% else %>
                    <br> <br>
                    <div class="flex justify-center items-center mb-8">
                        <div class="flex flex-col items-start">
                        <h1 class="text-2xl text-neutral-400 slide-in mx-auto">O clube ainda não tem nenhum desporto!</h1>
                        <h1 class="text-2xl text-neutral-400 slide-in">Adicione um desporto para começar a criar as suas equipas</h1>
                        </div>
                    </div>
                <% end %>


<!-------------------------------------------------------------------------------- EQUIPAS ------------------------------------------------------------------------->

        
            <div class="mb-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold text-indigo-300 flex items-center space-x-2">
                        <i data-feather="list" class="w-6 h-6"></i>
                        <span>Equipas</span>
                    </h2>
                    <div class="flex items-center gap-4">
                        <button data-modal-target="modal-add-team" data-modal-toggle="modal-add-team" class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                            <i data-feather="plus" class="w-4 h-4"></i>
                        </button>
                        <% if (current_user.club? and current_user.club_profile.has_teams?) or (current_user.board? and current_user.board_profile.club_profile.has_teams?) %>
                            <button class="bg-red-700 hover:bg-red-800 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                                <i data-feather="x" class="w-4 h-4"></i>
                            </button>
                        <% end %>
                    </div>
                </div>
            <% if (current_user.club? and current_user.club_profile.has_teams?) or (current_user.board? and current_user.board_profile.club_profile.has_teams?) %>
                <div>
                    <% selected_sport == 'football' ? sport_id = 2 : sport_id = 3 %>
                    <% current_user.club? ? teams=current_user.club_profile.club_teams.where(sport_id: sport_id) : teams=current_user.board_profile.club_profile.club_teams.where(sport_id: sport_id) %>
                    <select id="team-select" class="w-full md:w-64 bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200" onchange="window.location.href = '?sport=<%= selected_sport %>&team=' + this.value">
                        <option value="">Selecionar Equipa...</option>
                        <% teams.each do |team| %>
                            <option value="<%= team.id %>"><%= team.name %></option>
                        <% end %>
                    </select>
                    <% selected_team = params[:team] %>
                </div>
                
            </div>

<!-------------------------------------------------------------------------------- EQUIPA TÉCNICA ------------------------------------------------------------------------->

            <div>
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-yellow-300 flex items-center space-x-2">
                    <i data-feather="award" class="w-6 h-6"></i>
                        <span>Equipa Técnica ( ainda a ver como fazer )</span>
                    </h3>
                    <div class="flex items-center gap-4">
                        <button class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                            <i data-feather="user-plus" class="w-4 h-4"></i>
                        </button>
                        <button class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                            <i data-feather="mail" class="w-4 h-4"></i>
                        </button>
                    </div>
                </div>

                <div class="space-y-4">
                    <div class="bg-gray-800 rounded-xl p-6 border-l-4 border-yellow-500 transition-all duration-300 hover:shadow-xl hover:scale-[1.01]">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-4">
                                <%= image_tag "default_pp.jpg",
                                    class: "w-16 h-16 rounded-full border-4 border-yellow-500" %>
                                <div>
                                    <h4 class="text-lg font-semibold text-yellow-300">Treinador 1</h4>
                                    <p class="text-gray-400 flex items-center space-x-1">
                                        <span>Função • Idade</span>
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-2">

                                <button class="p-2 text-green-400 hover:bg-green-400/20 rounded-lg transition-all duration-200">
                                    <i data-feather="edit" class="w-5 h-5"></i>
                                </button>
                                <button class="p-2 text-red-400 hover:bg-red-400/20 rounded-lg transition-all duration-200">
                                    <i data-feather="trash-2" class="w-5 h-5"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    
            <br>

<!-------------------------------------------------------------------------------- JOGADORES ------------------------------------------------------------------------->

            <div class="mb-12">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-secondary-300 flex items-center space-x-2">
                        <i data-feather="users" class="w-6 h-6"></i>
                        <span>Jogadores ( ainda a ver como fazer )</span>
                    </h3>

                    <div class="flex items-center gap-4">
                        <button class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                            <i data-feather="user-plus" class="w-4 h-4"></i>
                        </button>
                        <button class="bg-secondary-400 hover:bg-secondary-500 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                            <i data-feather="mail" class="w-4 h-4"></i>
                        </button>
                    </div>
                </div>

                <div class="space-y-4">

                    <div class="bg-gray-800 rounded-xl p-6 border-l-4 border-secondary-500 transition-all duration-300 hover:shadow-xl  hover:scale-[1.01] ">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-4">
                                <%= image_tag "default_pp.jpg", class: "w-16 h-16 rounded-full border-4 border-secondary-500/50" %>
                                <div>
                                    <h4 class="text-lg font-semibold text-secondary-300">Jogador 1</h4>
                                    <p class="text-gray-400 flex items-center space-x-1">
                                        <span>Posição • Idade</span>
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-2">
                                <button class="p-2 text-green-400 hover:bg-green-400/20 rounded-lg transition-all duration-200">
                                    <i data-feather="edit" class="w-5 h-5"></i>
                                </button>
                                <button class="p-2 text-red-400 hover:bg-red-400/20 rounded-lg transition-all duration-200">
                                    <i data-feather="trash-2" class="w-5 h-5"></i>
                                </button>
                            </div>

                            
                        </div>
                    </div>
                </div>
            </div>
        <% else %>
            <br> <br>
            <div class="flex justify-center items-center mb-8">
                <div class="flex flex-col items-start">
                    <h1 class="text-2xl text-neutral-400 slide-in mx-auto">Ainda não tem nenhuma equipa neste desporto!</h1>
                </div>
            </div>
        <% end %>

<!-------------------------------------------------------------------------------- MODALS ------------------------------------------------------------------------->    
    
<!-------------------------------------------------------------------------------- MODAL ADICIONAR DESPORTO ------------------------------------------------------------------------->   

<% if (current_user.club? and !current_user.club_profile.has_both_sports?) or (current_user.board? and !current_user.board_profile.club_profile.has_both_sports?) %>
    <div id="select-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative p-4 w-full max-w-md max-h-full">
            <div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-800">
                <!-- Modal header -->
                <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-500 border-gray-200 space-x-1 bg-green-900">
                    <i data-feather="dribbble" class="w-6 h-6 text-white"></i>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white">   Adicionar Desporto </h3>
                    <button type="button" class="text-red-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm h-8 w-8 ms-auto inline-flex justify-center items-center dark:hover:bg-red-400/20 dark:hover:text-red-400" data-modal-toggle="select-modal">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                        </svg>
                    </button>
                </div>
                <!-- Modal body -->
                <div class="p-4 md:p-5">
                    <p>Escolha o desporto que pretende adicionar</p>
                    <ul class="space-y-4 mb-4">
                <% if (current_user.club? and !current_user.club_profile.has_football?) or (current_user.board? and !current_user.board_profile.club_profile.has_football?) %>
                    <%= form_with(url: club_sports_path, method: :post, scope: :club_sport, local: true) do |form| %>
                        <% if current_user.club? %>
                            <%= form.hidden_field :club_profile_id, value: current_user.club_profile.id %>
                        <% elsif current_user.board? %>
                            <%= form.hidden_field :club_profile_id, value: current_user.board_profile.club_profile.id %>
                        <% end %>
                        
                        <%= form.hidden_field :sport_id, value: 2 %>
                            <button type="submit" class="w-full"> 
                                <div class="space-y-4">
                                    <div class="group bg-gray-700 rounded-xl p-6 border-l-4 border-green-800 transition-all duration-300 hover:shadow-xl hover:scale-[1.01] hover:bg-green-900 ">
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center space-x-4">
                                                <i data-feather="plus" class="w-4 h-4 text-green-600 group-hover:text-white"></i>
                                                <div>
                                                    <h4 class="text-lg font-semibold text-green-600 group-hover:text-white">Futebol</h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </button>
                    <% end %>
                <% end %> 

                <% if (current_user.club? and !current_user.club_profile.has_handball?) or (current_user.board? and !current_user.board_profile.club_profile.has_handball?) %>
                    <%= form_with(url: club_sports_path, method: :post, scope: :club_sport, local: true) do |form| %>
                        <% if current_user.club? %>
                            <%= form.hidden_field :club_profile_id, value: current_user.club_profile.id %>
                        <% elsif current_user.board? %>
                            <%= form.hidden_field :club_profile_id, value: current_user.board_profile.club_profile.id %>
                        <% end %>
                        
                        <%= form.hidden_field :sport_id, value: 3 %>
                            <button type="submit" class="w-full"> 
                                <div class="space-y-4">
                                    <div class="group bg-gray-700 rounded-xl p-6 border-l-4 border-green-800 transition-all duration-300 hover:shadow-xl hover:scale-[1.01] hover:bg-green-900 ">
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center space-x-4">
                                                <i data-feather="plus" class="w-4 h-4 text-green-600 group-hover:text-white"></i>
                                                <div>
                                                    <h4 class="text-lg font-semibold text-green-600 group-hover:text-white">Andebol</h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </button>
                    <% end %>
                <% end %> 

                    </ul>
                </div>
            </div>
        </div>
    </div>

<% end %>

<!-------------------------------------------------------------------------------- MODAL ADICIONAR EQUIPA ------------------------------------------------------------------------->   

<% if (current_user.club? and !current_user.club_profile.has_no_sports?) or (current_user.board? and !current_user.board_profile.club_profile.has_no_sports?) %>
    <div id="modal-add-team" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative p-4 w-full max-w-md max-h-full">
            <div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-800">
                <!-- Modal header -->
                <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-500 border-gray-200 space-x-1 bg-green-900">
                    <i data-feather="clipboard" class="w-6 h-6 text-white"></i>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white">   Adicionar Equipa </h3>
                    <button type="button" class="text-red-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm h-8 w-8 ms-auto inline-flex justify-center items-center dark:hover:bg-red-400/20 dark:hover:text-red-400" data-modal-toggle="modal-add-team">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                        </svg>
