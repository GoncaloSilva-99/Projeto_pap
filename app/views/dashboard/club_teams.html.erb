<body class="min-h-screen flex text-white bg-gray-900">
<!-------------------------------------------------------------------------------- NOME E LOGO DO CLUBE ------------------------------------------------------------------------->
    <div class="w-64 bg-slate-800 shadow-xl min-h-screen flex flex-col border-r border-slate-700">
        <!-- Logo e nome do clube -->
        <div class="p-6 border-b border-slate-700">
            <div class="flex items-center justify-center mb-3">
                
                <% if (current_user.club? and current_user.club_profile.profile_picture.attached?) %>
                    <%= image_tag url_for(current_user.club_profile.profile_picture), class: "w-20 h-20 rounded-full border-1" %>
                <% elsif (current_user.board? && current_user.board_profile.club_profile.profile_picture.attached?) %>
                    <%= image_tag url_for(current_user.board_profile.club_profile.profile_picture), class: "w-20 h-20 rounded-full border-1" %>
                <% else %>
                    <%= image_tag "default_pp.jpg", class: "w-20 h-20 rounded-full border-1" %>
                <% end %>

                
            </div>
            <h1 class="text-lg font-bold text-center text-white"> <%= current_user.club_profile.name %> </h1>
        </div>
<!-------------------------------------------------------------------------------- SIDEBAR ------------------------------------------------------------------------->
        <nav class="flex-1 p-4 space-y-2">

            <%= link_to club_dashboard_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 hover:bg-slate-700 text-slate-300 hover:text-blue-400 rounded-xl border-l-4 hover:border-blue-500 border-transparent transition-all duration-300">
                <i data-feather="home" class="sidebar-icon text-blue-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Dashboard</span>
            </div>
            <% end %>

            <%= link_to club_teams_dashboard_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 bg-slate-700 text-green-500  rounded-xl border-l-4 border-green-500 transition-all duration-300">
                <i data-feather="users" class="sidebar-icon text-green-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Equipas</span>
            </div>
            <% end %>

            <div class="space-y-2 ml-10 mt-2">
                <% if (current_user.club? and !current_user.club_profile.has_no_sports?) or (current_user.board? and !current_user.board_profile.club_profile.has_no_sports?) %>
                    <% selected_sport = params[:sport] %>
                    <% if (current_user.club? and current_user.club_profile.has_football?) or (current_user.board? and current_user.board_profile.club_profile.has_football?) %>
                        <% if (current_user.club? and current_user.club_profile.has_both_sports?) or (current_user.board? and current_user.board_profile.club_profile.has_both_sports?) %>
                            <% if selected_sport == nil %>
                                <% selected_sport = "football" %>
                            <% end %>
                        <% else %>
                            <% selected_sport = "football" %>
                        <% end %>

                    <%= link_to url_for(params.permit!.to_h.merge(sport: 'football')), method: :get, class: ["block"].join(' ') do %>
                        <% if selected_sport == 'football' %>
                            <div class="flex items-center px-1 py-2 bg-slate-700 text-green-400 rounded-lg transition-all duration-200">
                                <i data-feather="chevron-right" class="w-4 h-4 mr-2 text-green-400"></i>
                                <span class="text-sm">Futebol</span>
                            </div>
                        <% else %>
                            <div class="flex items-center px-1 py-2 text-slate-300 hover:bg-slate-700 hover:text-green-400 rounded-lg transition-all duration-200">
                                <i data-feather="chevron-right" class="w-4 h-4 mr-2 text-green-400"></i>
                                <span class="text-sm">Futebol</span>
                            </div>
                        <% end %>
                        
                    <% end %>
                <% end %>

                <% if (current_user.club? and current_user.club_profile.has_handball?) or (current_user.board? and current_user.board_profile.club_profile.has_handball?) %>
                    <% if (current_user.club? and current_user.club_profile.has_both_sports?) or (current_user.board? and current_user.board_profile.club_profile.has_both_sports?) %>
                        <% if selected_sport == nil %>
                            <% selected_sport = "handball" %>
                        <% end %>
                    <% else %>
                        <% selected_sport = "handball" %>
                    <% end %>

                    <%= link_to url_for(params.permit!.to_h.merge(sport: 'handball')), method: :get, class: ["block"].join(' ') do %>
                        <% if selected_sport == 'handball' %>
                            <div class="flex items-center px-1 py-2 bg-slate-700 text-green-400 rounded-lg transition-all duration-200">
                                <i data-feather="chevron-right" class="w-4 h-4 mr-2 text-green-400"></i>
                                <span class="text-sm">Andebol</span>
                            </div>
                        <% else %>
                            <div class="flex items-center px-1 py-2 text-slate-300 hover:bg-slate-700 hover:text-green-400 rounded-lg transition-all duration-200">
                                <i data-feather="chevron-right" class="w-4 h-4 mr-2 text-green-400"></i>
                                <span class="text-sm">Andebol</span>
                            </div>
                        <% end %>
                        
                    <% end %>

                <% end %>
                    <button data-modal-target="select-modal-remove" data-modal-toggle="select-modal-remove" class="flex items-center px-1 py-2 text-slate-300 hover:bg-slate-700 hover:text-red-400 rounded-lg transition-all duration-200">
                        <i data-feather="x" class="w-4 h-4 mr-2 text-red-400"></i>
                        <span class="text-sm">Remover Desporto</span>
                    </button>
                <% end %>
                <% if (current_user.club? and !current_user.club_profile.has_both_sports?) or (current_user.board? and !current_user.board_profile.club_profile.has_both_sports?) %>
                        <button data-modal-target="select-modal" data-modal-toggle="select-modal" class="flex items-center px-1 py-2 text-slate-300 hover:bg-slate-700 hover:text-green-400 rounded-lg transition-all duration-200">
                            <i data-feather="plus" class="w-4 h-4 mr-2 text-green-400"></i>
                            <span class="text-sm">Adicionar Desporto</span>
                        </button>
                <% end %>

            </div>

            <%= link_to root_path do %>
            <div  class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-yellow-400 rounded-xl border-l-4 border-transparent hover:border-yellow-500 transition-all duration-300">
                <i data-feather="dollar-sign" class="sidebar-icon text-yellow-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Finanças</span>
            </div>
            <% end %>

            <%= link_to root_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-red-400 rounded-xl border-l-4 border-transparent hover:border-red-500 transition-all duration-300">
                <i data-feather="heart" class="sidebar-icon text-red-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Adeptos</span>
            </div>
            <% end %>

            <%= link_to root_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-purple-400 rounded-xl border-l-4 border-transparent hover:border-purple-500 transition-all duration-300">
                <i data-feather="user" class="sidebar-icon text-purple-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Público</span>
            </div>
            <% end %>

            <%= link_to root_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-orange-400 rounded-xl border-l-4 border-transparent hover:border-orange-500 transition-all duration-300">
                <i data-feather="map-pin" class="sidebar-icon text-orange-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Infraestruturas</span>
            </div>
            <% end %>

            <%= link_to club_equipment_dashboard_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-rose-400 rounded-xl border-l-4 border-transparent hover:border-rose-300 transition-all duration-300">
                <i data-feather="clipboard" class="sidebar-icon text-rose-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Material</span>
            </div>
            <% end %>

            <%= link_to club_board_dashboard_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-rose-900 rounded-xl border-l-4 border-transparent hover:border-rose-950 transition-all duration-300">
                <i data-feather="settings" class="sidebar-icon text-rose-900 w-5 h-5 mr-3"></i>
                <span class="font-medium">Membros da Direção</span>
            </div>
            <% end %>

            <%= link_to root_path do %>
            <div class="sidebar-item flex items-center px-4 py-3 text-slate-300 hover:bg-slate-700 hover:text-gray-400 rounded-xl border-l-4 border-transparent hover:border-gray-400 transition-all duration-300">
                <i data-feather="arrow-left" class="sidebar-icon text-gray-400 w-5 h-5 mr-3"></i>
                <span class="font-medium">Página Inicial</span>
            </div>
            <% end %>
        </nav>


        <div class="p-4 border-t border-slate-700">
            <div class="flex items-center space-x-3">
                <% if (current_user.club? and current_user.club_profile.profile_picture.attached?) %>
                    <%= image_tag url_for(current_user.club_profile.profile_picture), class: "w-10 h-10 rounded-full border-2 border-slate-600" %>
                <% elsif (current_user.board? and current_user.profile_picture.attached?) %>
                    <%= image_tag url_for(current_user.board_profile.profile_picture), class: "w-10 h-10 rounded-full border-2 border-slate-600" %>
                <% else %>
                    <%= image_tag "default_pp.jpg", class: "w-10 h-10 rounded-full border-2 border-slate-600" %>
                <% end %>
                <div class="flex-1">
                    <% if current_user.club? %>
                        <p class="text-sm font-medium text-white"> <%= current_user.club_profile.name %> </p>
                    <% elsif current_user.board? %>
                        <p class="text-sm font-medium text-white"> <%= current_user.board_profile.name %> </p>
                    <% end %>
                </div>
                <%= button_to destroy_user_session_path, method: :delete do %>
                    <i data-feather="log-out" class="text-slate-400 hover:text-red-400 cursor-pointer transition-colors"></i>
                <% end %>
            </div>
        </div>
</div>
<!-------------------------------------------------------------------------------- MAIN ------------------------------------------------------------------------->
    <div class="flex-1 p-8">

            <div class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-3xl font-bold  text-green-400 slide-in">Equipas</h1>
                    <p class="text-slate-400 mt-1">Veja as diferentes equipas do seu clube e os seus respetivos membros</p> 
                </div>
            </div>

<!-------------------------------------------------------------------------------- DESPORTOS ------------------------------------------------------------------------->

            <div class="mb-12">
                <% if (current_user.club? and current_user.club_profile.has_no_sports?) or (current_user.board? and current_user.board_profile.club_profile.has_no_sports?) %>
                    <br> <br>
                    <div class="flex justify-center items-center mb-8">
                        <div class="flex flex-col items-start">
                        <h1 class="text-2xl text-neutral-400 slide-in mx-auto">O clube ainda não tem nenhum desporto!</h1>
                        <h1 class="text-2xl text-neutral-400 slide-in">Adicione um desporto para começar a criar as suas equipas</h1>
                        </div>
                    </div>
                <% end %>


<!-------------------------------------------------------------------------------- EQUIPAS ------------------------------------------------------------------------->

        
            <div class="mb-8">
                <div class="flex items-center justify-between mb-6">
                    <% if (current_user.club? and !current_user.club_profile.has_no_sports?) or (current_user.board? and !current_user.board_profile.club_profile.has_no_sports?) %>
                    <h2 class="text-xl font-bold text-indigo-300 flex items-center space-x-2">
                        <i data-feather="list" class="w-6 h-6"></i>
                        <span>Equipas</span>
                    </h2>
                    <div class="flex items-center gap-4">
                        <button data-modal-target="modal-add-team" data-modal-toggle="modal-add-team" class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                            <i data-feather="plus" class="w-4 h-4"></i>
                        </button>
                        <% if (current_user.club? and current_user.club_profile.has_teams?) or (current_user.board? and current_user.board_profile.club_profile.has_teams?) %>
                            <button class="bg-red-700 hover:bg-red-800 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                                <i data-feather="x" class="w-4 h-4"></i>
                            </button>
                        <% end %>
                    </div>
                    <% end %>
                </div>
            <% if (current_user.club? and (selected_sport == 'football' and current_user.club_profile&.has_football_teams?) or (selected_sport == 'handball' and current_user.club_profile&.has_handball_teams?) ) or (current_user.board? and (selected_sport == 'football' and current_user.board_profile&.club_profile&.has_football_teams?) or (selected_sport == 'handball' and current_user.board_profile&.club_profile&.has_handball_teams?)) %>
                <div class="flex items-center mb-6 gap-x-4">
                    <% selected_sport == 'football' ? sport_id = 2 : sport_id = 3 %>
                    <% current_user.club? ? teams=current_user.club_profile.club_teams.where(sport_id: sport_id) : teams=current_user.board_profile.club_profile.club_teams.where(sport_id: sport_id) %>
                    <% if params[:team] and teams.exists?(params[:team]) %>
                        <% selected_team = params[:team] %>
                    <% elsif teams.any? %>
                        <% selected_team = teams.first.id %>
                    <% else %>
                        <% selected_team = nil %>
                    <% end %>

                    <select id="team-select" class="w-full md:w-64 bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200" onchange="window.location.href = '?sport=<%= selected_sport %>&team=' + this.value">
                        <% teams.each do |team|  %>
                            <option value="<%= team.id %>" <%= 'selected' if selected_team == team.id.to_s %>> <%= team.name %> </option>
                        <% end %>
                    </select>

                    <button data-modal-target="modal-rename-team" data-modal-toggle="modal-rename-team" class="bg-blue-700 hover:bg-blue-800 text-white px-4 py-3 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                        <i data-feather="edit-3" class="w-4 h-4"></i>
                    </button>

                    <div class="relative">
                        <%= form_with url: club_teams_dashboard_path, method: :get, local: true, id: "search-form" do %>
                            <i data-feather="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-4 h-5 pointer-events-none z-10"></i>
                            <%= text_field_tag :query,
                                params[:query],
                                placeholder: "Pesquisar membros...",
                                class: "bg-gray-800 border border-gray-700 rounded-lg pl-10 pr-10 py-2 w-full focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent",
                                oninput: "clearTimeout(window.searchTimeout); window.searchTimeout = setTimeout(() => this.form.requestSubmit(), 1000); toggleClearButton(this)",
                                id: "search-input" %>
                            <%= hidden_field_tag :sport, params[:sport] %>
                            <%= hidden_field_tag :team, params[:team] %>
                            <button type="button" id="clear-search" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white transition <%= 'hidden' unless params[:query].present? %>" onclick="clearSearch()">
                                <i data-feather="x" class="w-4 h-4 text-red-400"></i>
                            </button>
                        <% end %>
                    </div>

                </div>
            </div>

<!-------------------------------------------------------------------------------- EQUIPA TÉCNICA ------------------------------------------------------------------------->

            <div>
            <% if (!@coach_results&.any? and !@player_results&.any? and params[:query].present?) %>
                <div class="flex justify-center items-center mb-8">
                    <div class="flex flex-col items-start">
                        <h1 class="text-2xl text-neutral-400 slide-in mx-auto">Pesquisa não retornou nada</h1>
                    </div>
                </div>
            <% elsif (params[:query].present? and @coach_results.any?) or (!params[:query].present?) %>
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-yellow-300 flex items-center space-x-2">
                    <i data-feather="award" class="w-6 h-6"></i>
                        <span>Equipa Técnica ( <%= @coach_results&.any? ? @coach_results.count : "0" %> )</span>
                    </h3>
                    <div class="flex items-center gap-4">
                        <%= link_to new_coach_profile_registration_path(selected_sport: selected_sport, selected_team: selected_team ) do %>
                            <button class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                                <i data-feather="user-plus" class="w-4 h-4"></i>
                            </button>
                        <% end %>
                        <button class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                            <i data-feather="mail" class="w-4 h-4"></i>
                        </button>
                    </div>
                </div>
            <% end %>

             <% if @coach_results&.any? %>
                    <div class="grid grid-cols-4 justify-center gap-6">
                    <% @coach_results.each do |coach| %>
                        <%= link_to coach_profile_path(coach) do %>
                            <div class="bg-gray-800 border-l-4 border-yellow-500 rounded-xl overflow-hidden transition-all hover:scale-[1.01] hover:shadow-lg hover:shadow-primary/10">
                                <div class="relative h-40 bg-gradient-to-r from-primary/20 to-secondary/20">
                                    <div class="relative w-full h-40 rounded-lg overflow-hidden shadow-lg">
                                        <% if coach.banner_picture.attached? %>
                                            <%= image_tag url_for(coach.banner_picture), class: "w-full h-full object-cover" %>
                                        <% else %>
                                            <%= image_tag "default_banner.jpg", class: "w-full h-full object-cover" %>
                                        <% end %>
                                    </div>
                                    <div class="absolute top-20 left-4 w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-lg bg-gray-100 group">
                                        <% if coach.profile_picture.attached? %>
                                            <%= image_tag url_for(coach.profile_picture), class: "w-full h-full object-cover " %>
                                        <% else %>
                                            <%= image_tag "default_pp.jpg", class: "w-full h-full object-cover " %>
                                        <% end %>
                                    </div>
                                    <div class="absolute top-2 right-2 flex space-x-1">
                                        <button class="bg-gray-900 hover:bg-green-600 text-green-600 hover:text-white p-1.5 rounded-full transition">
                                            <i data-feather="edit" class="w-4 h-4"></i>
                                        </button>
                                        <button class="bg-gray-900 hover:bg-red-500 text-red-500 hover:text-white p-1.5 rounded-full transition">
                                            <i data-feather="trash-2" class="w-4 h-4"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="p-4 pt-14 pb-4">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <h3 class="font-bold text-lg"> <%= coach.name %> </h3>
                                            <p class="text-gray-400 text-sm"> <%= coach.coach_type %> • <%= ((Date.today - coach.birth_date).to_i / 365.25).floor  %> anos</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                        <% end %>
                    <% end %>

                <% if @coach_results&.count > 4 %>
                    <div class="mt-8 flex justify-between items-center">
                        <div class="text-sm text-gray-400">
                            Showing <span class="font-medium text-white">1</span> to <span class="font-medium text-white">4</span> of <span class="font-medium text-white">24</span> items
                        </div>
                        <div class="flex space-x-1">
                            <button class="w-10 h-10 flex items-center justify-center rounded-lg bg-gray-800 border border-gray-700 hover:bg-gray-700 transition">
                                <i data-feather="chevron-left" class="w-4 h-4"></i>
                            </button>
                            <button class="w-10 h-10 flex items-center justify-center rounded-lg bg-blue-600 text-white hover:bg-blue-500/90 transition">1</button>
                            <button class="w-10 h-10 flex items-center justify-center rounded-lg bg-gray-800 border border-gray-700 hover:bg-gray-700 transition">2</button>
                            <button class="w-10 h-10 flex items-center justify-center rounded-lg bg-gray-800 border border-gray-700 hover:bg-gray-700 transition">3</button>
                            <button class="w-10 h-10 flex items-center justify-center rounded-lg bg-gray-800 border border-gray-700 hover:bg-gray-700 transition">
                                <i data-feather="chevron-right" class="w-4 h-4"></i>
                            </button>
                        </div>
                    
                    </div>
                <% end %>
                    </div>

                <% elsif !@coach_results&.any? and !params[:query].present? %>
                    <div class="flex justify-center items-center mb-8">
                        <div class="flex flex-col items-start">
                            <h1 class="text-2xl text-neutral-400 slide-in mx-auto">Ainda não tem Equipa Técnica nesta equipa!</h1>
                        </div>
                    </div>
                <% end %>
                
            </div>


<!-------------------------------------------------------------------------------- JOGADORES ------------------------------------------------------------------------->

            <div class="mb-12">
                <% if (params[:query].present? and @player_results.any? ) or (!params[:query].present?) %>
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-bold text-secondary-300 flex items-center space-x-2">
                            <i data-feather="users" class="w-6 h-6"></i>
                            <span>Jogadores ( <%= @player_results&.any? ? @player_results.count : "0" %> )</span>
                        </h3>

                        <div class="flex items-center gap-4">
                            <%= link_to new_player_profile_registration_path(selected_sport: selected_sport, selected_team: selected_team ) do %>
                                <button class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                                    <i data-feather="user-plus" class="w-4 h-4"></i>
                                </button>
                            <% end %>
                            <button class="bg-secondary-400 hover:bg-secondary-500 text-white px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105">
                                <i data-feather="mail" class="w-4 h-4"></i>
                            </button>
                        </div>
                    </div>
                <% end %>

                <% if @player_results&.any? %>
                    <div class="grid grid-cols-4 justify-center gap-6">
                    <% @player_results.each do |player| %>
                        <%= link_to player_profile_path(player) do %>
                            <div class="bg-gray-800 border-l-4 border-secondary-300 rounded-xl overflow-hidden transition-all hover:scale-[1.01] hover:shadow-lg hover:shadow-primary/10">
                                <div class="relative h-40 bg-gradient-to-r from-primary/20 to-secondary/20">
                                    <div class="relative w-full h-40 rounded-lg overflow-hidden shadow-lg">
                                        <% if player.banner_picture.attached? %>
                                            <%= image_tag url_for(player.banner_picture), class: "w-full h-full object-cover" %>
                                        <% else %>
                                            <%= image_tag "default_banner.jpg", class: "w-full h-full object-cover" %>
                                        <% end %>
                                    </div>
                                    <div class="absolute top-20 left-4 w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-lg bg-gray-100 group">
                                        <% if player.profile_picture.attached? %>
                                            <%= image_tag url_for(player.profile_picture), class: "w-full h-full object-cover " %>
                                        <% else %>
                                            <%= image_tag "default_pp.jpg", class: "w-full h-full object-cover " %>
                                        <% end %>
                                    </div>
