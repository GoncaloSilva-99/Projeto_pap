<script>
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('confirmModal');
    const confirmMessage = document.getElementById('confirmMessage');
    const cancelBtn = document.getElementById('cancelBtn');
    const confirmBtn = document.getElementById('confirmBtn');
    let currentForm = null;
    
    function showModal(message) {
      confirmMessage.textContent = message;
      modal.classList.remove('hidden');
      setTimeout(() => {
        modal.style.opacity = '1';
      }, 10);
    }
    

    function hideModal() {
      modal.style.opacity = '0';
      setTimeout(() => {
        modal.classList.add('hidden');
        currentForm = null;
      }, 200);
    }
    
    // Adiciona evento a todos os formulários de delete
    document.querySelectorAll('.delete-sport-btn').forEach(button => {
      const form = button.closest('form');
      
      form.addEventListener('submit', function(event) {
        event.preventDefault();
        event.stopPropagation();
        
        currentForm = form;
        const sportName = button.dataset.sportName || 'este item';
        showModal(`Tem a certeza que deseja remover ${sportName}?`);
      });
    });
    
    cancelBtn.addEventListener('click', hideModal);
    

    confirmBtn.addEventListener('click', function() {
      if (currentForm) {
        hideModal();
        const newForm = currentForm.cloneNode(true);
        currentForm.parentNode.replaceChild(newForm, currentForm);
        newForm.submit();
      }
    });
    
  });
</script>

