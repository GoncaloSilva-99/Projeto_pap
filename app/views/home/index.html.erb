    <script>
        // Espera que o DOM(Document Object Model — representação em memória da página HTML/XML que o browser cria)
        // esteja totalmente carregado antes de executar a função
        document.addEventListener('DOMContentLoaded', () => {
        // Se a biblioteca feather estiver disponível, substitui os ícones <i> pelo SVG correspondente
        if (typeof feather !== 'undefined') feather.replace();

        // Obtém o botão que activa a pesquisa pelo id
        const searchButton = document.getElementById('search-button');
        // Obtém o campo de input da pesquisa pelo id
        const searchBar = document.getElementById('search-bar');
        // Obtém o container do nav para cálculos de layout
        const navContainer = document.querySelector('nav .container');
        // Se não existir a searchBar ou o navContainer, sai da função (não prossegue)
        if (!searchBar || !navContainer) return;

        // Seletor do grupo de elementos do lado direito do nav (usado para calcular espaço)
        const rightSideSelector = '.right-overlap';
         // Função que devolve o elemento do lado direito dentro do nav
         function getRightSideEl() { return navContainer.querySelector(rightSideSelector); }

        // Cria um elemento canvas(área bitmap onde se pode desenhar dinamicamente com JavaScript)
        // para medir a largura do texto
        const canvas = document.createElement('canvas');
        // Obtém o contexto 2D do canvas para medir texto
        const ctx = canvas.getContext('2d');

        // Função que mede a largura em pixels de um texto dado usando o canvas
        function measureTextWidth(text) {
            // Obtém os estilos computados do input para usar a mesma fonte na medição
            const style = window.getComputedStyle(searchBar);
            // Define a fonte do contexto (usa style.font se existir, senão composição de tamanho e família)
            ctx.font = style.font || `${style.fontSize} ${style.fontFamily}`;
            // Mede a largura do texto (ou string vazia) e arredonda para cima
            return Math.ceil(ctx.measureText(text || '').width);
        }

        // Função utilitária que converte "NNpx" para número (float)
        function parsePx(v) { return v ? parseFloat(v.replace('px','')) : 0; }

        // Função que ajusta dinamicamente a largura da barra de pesquisa
        function adjustSearchWidth() {
            // Se a barra de pesquisa não tiver a classe 'active', remove a largura inline e sai
            if (!searchBar.classList.contains('active')) {
                searchBar.style.width = '';
                searchBar.style.maxWidth = '';
                searchBar.style.right = '';
                return;
            }

            // Largura mínima quando activa em px (mais pequena em mobile)
            const MIN_ACTIVE = window.innerWidth <= 640 ? 200 : 300;

            // Rect do input para cálculos de posição
            const inputRect = searchBar.getBoundingClientRect();
            // Elemento do lado direito (botões) — pode ser null
            const rightEl = getRightSideEl();

            // Texto actual (valor do input ou placeholder)
            const text = searchBar.value || searchBar.placeholder || '';
            // Largura do texto medida via canvas
            const textWidth = measureTextWidth(text);

            // Inclui paddings horizontais e um buffer extra para o caret/espacamento
            const cs = window.getComputedStyle(searchBar);
            const paddingLR = parsePx(cs.paddingLeft) + parsePx(cs.paddingRight);
            const extraBuffer = 24; // espaço extra para caret e folga
            const contentWidth = textWidth + paddingLR + extraBuffer;

            // Determina margem direita de segurança
            const MARGIN_RIGHT = 12; // px (mais apertado — JS controla o resto)

            // Calcula espaço disponível até à borda direita do nav/viewport (prioritário)
            const viewportRight = window.innerWidth;
            const navRect = navContainer ? navContainer.getBoundingClientRect() : { right: viewportRight };
            // usa o mínimo entre o viewport e a borda do nav para evitar overflow
            let availableViewport = Math.max(0, Math.min(viewportRight, navRect.right) - inputRect.left - MARGIN_RIGHT);

            // Se existir o elemento do lado direito e ele estiver visível dentro do nav, use-o como limite adicional
            if (rightEl && rightEl.offsetParent !== null) {
                try {
                    const rightRect = rightEl.getBoundingClientRect();
                    // espaço até ao início do lado direito (mantém pequena folga)
                    const calc = Math.max(40, rightRect.left - inputRect.left - 8);
                    availableViewport = Math.min(availableViewport, calc);
                } catch (e) {
                    // fallback silencioso
                }
            }

            // Proteção CSS inline: garante que o input nunca excede o limite calculado
            searchBar.style.maxWidth = availableViewport + 'px';
            // Em mobile (relativo) não forçamos `right` inline — deixa o fluxo natural
            if (window.innerWidth > 640) {
                searchBar.style.right = MARGIN_RIGHT + 'px';
            } else {
                searchBar.style.right = '';
            }

            // Ajusta o mínimo para caber caso a viewport seja muito estreita
            const effectiveMin = Math.min(MIN_ACTIVE, Math.max(0, availableViewport));

            // Calcula a largura desejada respeitando mínimo, conteúdo e o limite do viewport
            const desired = Math.min(Math.max(effectiveMin, contentWidth), availableViewport);
            // Aplica a largura calculada ao input
            searchBar.style.width = desired + 'px';
        }

        // Se o botão de pesquisa existir, adiciona o listener de clique
        if (searchButton) {
            let isToggglingSearch = false; // Flag para evitar conflito entre eventos

            searchButton.addEventListener('click', (e) => {
                e.stopPropagation();
                isToggglingSearch = true;
                const nowActive = searchBar.classList.toggle('active');
                const rightEl = getRightSideEl();
                const navLinksEl = document.querySelector('.nav-links-overlap');

                // Em mobile: esconde o lado direito (notificações, apps, user menu)
                if (window.innerWidth <= 640 && rightEl) {
                    if (nowActive) {
                        rightEl.classList.add('hidden-by-search');
                    } else {
                        rightEl.classList.remove('hidden-by-search');
                    }
                 }

                 // Em desktop: esconde os links de navegação
                 if (window.innerWidth > 640 && navLinksEl) {
                    if (nowActive) {
                        navLinksEl.classList.add('hidden-by-search');
                    } else {
                        navLinksEl.classList.remove('hidden-by-search');
                    }
                 }

                  // Ajusta largura dinamicamente (mobile e desktop) e foca
                  setTimeout(() => { searchBar.focus(); adjustSearchWidth(); }, 0);
                  if (!nowActive) {
                      searchBar.style.width = '';
                     // Reaparecer elementos após 400ms
                     if (rightEl) rightEl.classList.remove('hidden-by-search');
                      if (navLinksEl) {
                          setTimeout(() => {
                              navLinksEl.classList.remove('hidden-by-search');
                          }, 400);
                      }
                   }
               });

              // Fecha ao clicar fora
              document.addEventListener('click', (ev) => {
                  if (isToggglingSearch) return; // Ignora o clique se estamos a fazer toggle
                  if (!searchBar.classList.contains('active')) return;
                  if (ev.target === searchBar || ev.target === searchButton || searchBar.contains(ev.target)) return;
                  searchBar.classList.remove('active');
                  const rightEl = getRightSideEl();
                  const navLinksEl = document.querySelector('.nav-links-overlap');
                 // Remove hidden-by-search de ambos em mobile e desktop
                 if (rightEl) rightEl.classList.remove('hidden-by-search');
                  if (navLinksEl) {
                      setTimeout(() => {
                          navLinksEl.classList.remove('hidden-by-search');
                      }, 400);
                  }
                  searchBar.style.width = '';
              });
         }

        // IIFE que gere eventos de input e resize sem poluir o escopo global
        (function() {
            // Guarda o comprimento anterior do valor do input para detecção de mudanças
            let prevLen = searchBar.value ? searchBar.value.length : 0;

            // Ao alterar o conteúdo do input
            searchBar.addEventListener('input', () => {
            // Obtém o novo comprimento do texto
            const len = searchBar.value.length;
            // Se o comprimento não mudou, não faz nada
            if (len === prevLen) return;
            // Recalcula a largura com base no texto actual (assim backspace também reduz)
            adjustSearchWidth();
            // Actualiza o comprimento anterior
            prevLen = len;
            });

            // Ao clicar no botão de pesquisa, sincroniza prevLen após o reflow
            if (searchButton) {
            searchButton.addEventListener('click', () => {
                setTimeout(() => {
                prevLen = searchBar.classList.contains('active') ? (searchBar.value ? searchBar.value.length : 0) : 0;
                }, 0);
            });
            }

            // Ao redimensionar a janela, debounce e recalcula a largura
            window.addEventListener('resize', () => {
            clearTimeout(window.__searchResizeTimer);
            window.__searchResizeTimer = setTimeout(adjustSearchWidth, 120);
            });
        })();

        // Chamada inicial para ajustar a largura quando a página carrega
        adjustSearchWidth();
        
        // Lógica para o menu de utilizador (clicar para abrir, sair para fechar)
        const userMenuContainer = document.getElementById('user-menu-container');
        const userMenuButton = document.getElementById('user-menu-button');
        const userDropdown = document.getElementById('user-dropdown');

        let isMenuPinned = false; // Variável para controlar se o menu está "fixo"

        if (userMenuContainer && userMenuButton && userDropdown) {
            // 1. Mostrar menu ao passar o rato por cima
            userMenuContainer.addEventListener('mouseenter', () => {
                userDropdown.classList.remove('hidden');
            });

            // 2. Esconder o menu ao sair com o rato, APENAS se não estiver fixo
            userMenuContainer.addEventListener('mouseleave', () => {
                if (!isMenuPinned) {
                    userDropdown.classList.add('hidden');
                }
            });

            // 3. Fixar/libertar o menu ao clicar no botão
            userMenuButton.addEventListener('click', (event) => {
                event.stopPropagation(); // Impede que o clique feche o menu imediatamente
                isMenuPinned = !isMenuPinned; // Alterna o estado "fixo"
                if (isMenuPinned) {
                    userDropdown.classList.remove('hidden'); // Garante que está visível ao fixar
                }
            });

            // 4. Fechar o menu se estiver fixo e o utilizador clicar fora ou fizer scroll
            const closePinnedMenu = () => {
                if (isMenuPinned) {
                    isMenuPinned = false;
                    userDropdown.classList.add('hidden');
                }
            };

            document.addEventListener('click', closePinnedMenu);
            window.addEventListener('scroll', closePinnedMenu);
        }

        // Calcula a duração da animação baseada na largura do conteúdo (velocidade consistente)
        function calculateScrollDuration() {
            const scrollContainer = document.querySelector('.news-scroll');
            if (!scrollContainer) return;

            // Velocidade em pixels por segundo (ajuste conforme necessário)
            const PIXELS_PER_SECOND = 10;
            
            // Obtém a largura total do conteúdo
            const totalWidth = scrollContainer.scrollWidth;
            // A animação vai de 0 a -50%, então a distância é 50% da largura
            const distanceToCover = totalWidth / 2;
            
            // Calcula a duração em segundos
            const duration = distanceToCover / PIXELS_PER_SECOND;
            
            // Define a variável CSS
            document.documentElement.style.setProperty('--scroll-duration', duration + 's');
        }

        // Calcula ao carregar
        calculateScrollDuration();

        // Recalcula ao redimensionar
        window.addEventListener('resize', () => {
            clearTimeout(window.__scrollDurationTimer);
            window.__scrollDurationTimer = setTimeout(calculateScrollDuration, 120);
        });

        // posiciona o ticker imediatamente abaixo do navbar (funciona em mobile e desktop)
        function positionTicker() {
            const nav = document.querySelector('nav');
            const ticker = document.getElementById('news-ticker');
            const heroSection = document.getElementById('inicio');
            
            if (!nav || !ticker) return;
            
            const navRect = nav.getBoundingClientRect();
            // define top inline para o bottom do nav (px)
            ticker.style.top = navRect.bottom + 'px';
            
            // Calcula a altura total ocupada (navbar + ticker)
            if (heroSection) {
                const tickerRect = ticker.getBoundingClientRect();
                const totalHeight = tickerRect.bottom;
                // Aplica margin-top dinamicamente para evitar que o ticker tape o conteúdo
                heroSection.style.marginTop = totalHeight + 'px';
            }
        }

        // chama uma vez ao carregar
        positionTicker();

        // reajusta no resize com debounce simples
        let _tickerResizeTimer = null;
        window.addEventListener('resize', () => {
            clearTimeout(_tickerResizeTimer);
            _tickerResizeTimer = setTimeout(positionTicker, 120);
        });

        

        });
    </script>

